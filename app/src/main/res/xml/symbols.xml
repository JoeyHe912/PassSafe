<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:horizontalGap="0px"
    android:keyHeight="8%"
    android:keyWidth="10%p"
    android:verticalGap="0px">

    <Row>
        <Key
            android:keyEdgeFlags="left"
            android:keyLabel="1" />
        <Key android:keyLabel="2" />
        <Key android:keyLabel="3" />
        <Key android:keyLabel="4" />
        <Key android:keyLabel="5" />
        <Key android:keyLabel="6" />
        <Key android:keyLabel="7" />
        <Key android:keyLabel="8" />
        <Key android:keyLabel="9" />
        <Key
            android:keyEdgeFlags="right"
            android:keyLabel="0" />
    </Row>

    <Row>
        <Key
            android:keyEdgeFlags="left"
            android:horizontalGap="5%"
            android:keyLabel="\@" />
        <Key android:keyLabel="\#" />
        <Key android:keyLabel="$" />
        <Key android:keyLabel="%" />
        <Key android:keyLabel="&amp;" />
        <Key android:keyLabel="-" />
        <Key android:keyLabel="+" />
        <Key android:keyLabel="(" />
        <Key
            android:keyEdgeFlags="right"
            android:keyLabel=")" />
    </Row>

    <Row>
        <Key
            android:codes="-6"
            android:keyEdgeFlags="left"
            android:keyLabel="=\\&lt;"
            android:keyWidth='15%' />
        <Key android:keyLabel="*" />
        <Key android:keyLabel='\"' />
        <Key android:keyLabel="\'" />
        <Key android:keyLabel=":" />
        <Key android:keyLabel=";" />
        <Key android:keyLabel="!" />
        <Key android:keyLabel="\?" />
        <Key
            android:codes="-5"
            android:isRepeatable="true"
            android:keyEdgeFlags="right"
            android:keyIcon="@drawable/ic_keyboard_backspace"
            android:keyWidth='15%' />
    </Row>

    <Row android:rowEdgeFlags="bottom">
        <Key
            android:codes="-2"
            android:keyEdgeFlags="left"
            android:keyLabel="ABC"
            android:keyWidth="15%" />
        <Key android:keyLabel="," />
        <Key android:keyLabel="_" />
        <Key
            android:codes="32"
            android:isRepeatable="true"
            android:keyIcon="@drawable/ic_keyboard_space"
            android:keyWidth="30%p" />
        <Key android:keyLabel="/" />
        <Key android:keyLabel="." />
        <Key
            android:codes="-4"
            android:keyEdgeFlags="right"
            android:keyIcon="@drawable/ic_keyboard_return"
            android:keyWidth="15%p" />
    </Row>
</Keyboard>